<div class="modal fade" id="addRecipeModal" tabindex="-1" aria-
labelledby="addRecipeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addRecipeModalLabel">Add New Recipe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Modal Body -->
            <div class="modal-body bg-white text-black">
                <form id="addRecipeForm">
                    <div class="row g-3">
                    <!-- Left Column -->
                    <div class="col-md-6 d-flex flex-column">
                        <div class="p-3 border rounded flex-fill">
                            <div class="mb-3">
                                <label for="recipeName" class="form-label fw-bold" style="color: rgb(128, 0, 255)">Recipe Name</label>
                                <input type="text" class="form-control" id="recipeName" style="color: rgb(128, 0, 255)" required>
                            </div>
                            <div class="mb-3">
                                <label for="tagLine" class="form-label fw-bold" style="color: rgb(128, 0, 255)">Tag Line</label>
                                <input type="text" class="form-control" id="tagLine" style="color: rgb(128, 0, 255)">
                            </div>
                        <div class="mb-3">
                            <label for="summary" class="form-label fw-bold" style="color: rgb(128, 0, 255)">Summary</label>
                            <textarea class="form-control" id="summary" rows="3" style="color: rgb(128, 0, 255)"></textarea>
                        </div>
                    </div>
                </div>
                <!-- Right Column -->
                <div class="col-md-6 d-flex flex-column">
                    <div class="p-3 border rounded flex-fill">
                        <!-- Categories Dropdown -->
                        <div class="mb-3">
                            <label class="form-label fw-bold" style="color: rgb(128, 0, 255)">Categories</label>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start custom-dropdown" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="color: rgb(128, 0, 255)">
                                            Select Categories
                                        </button>
                                        <ul class="dropdown-menu w-100 overflow-auto custom-dropdown-menu" id="categoryList" style="max-height: 200px;">
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="0">Breakfast</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="1">Lunch</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="2">Dinner</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="3">Dessert</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="4">Snack</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="5">Vegan</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="6">Vegetarian</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="7">GlutenFree</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="8">Keto</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="9">LowCarb</a></li>
                                            <li><a class="dropdown-item" href="#" style="color: rgb(128, 0, 255)" data-value="10">HighProtein</a></li>
                                        </ul>
                                    </div>
                                    <input type="hidden" id="categories" value="" style="color: rgb(128, 0, 255)">
                                    <small class="form-text text-muted text-end fst-italic" style="color: rgb(128, 0, 255)">Click to select multiple categories.</small>
                                </div>
                                <!-- Ingredients Section -->
                                <div class="mb-3">
                                    <label for="ingredients" class="form-label fw-bold" style="color: rgb(128, 0, 255)">Ingredients (comma-separated)</label>
                                    <textarea class="form-control" id="ingredients"rows="6" style="color: rgb(128, 0, 255)"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Full Width Section for Instructions -->
                    <div class="p-3 border rounded mt-3">
                        <div class="mb-3">
                            <label for="instructions" class="form-label fw-bold" style="color: rgb(128, 0, 255)">Instructions</label>
                            <textarea class="form-control" id="instructions"rows="5" style="color: rgb(128, 0, 255)" style="border: 2px solid rgb(128, 0, 255)"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Modal Footer -->
            <div class="modal-footer bg-black">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="saveRecipe">Save Recipe</button>
            </div>
        </div>
    </div>
</div>